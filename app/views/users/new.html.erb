<center>
<h1>Create New User</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |err_message| %>
      <li>
        <%= err_message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user, controller: 'users', action: 'create' do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :phone %>
<%= f.text_field :phone %>

<%= f.label :username %>
<%= f.text_field :username %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.submit %>

<% end %>
</center>
